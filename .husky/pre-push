# Evitar bucles verificando si estamos en un push forzado
if git log -1 --pretty=%B | grep -q "\[skip-push\]"; then
  echo "ğŸ›‘ Se detectÃ³ [skip-push], saltando pre-push..."
  exit 0
fi

echo "\n\n â³  \e[1;34mGenerando CHANGELOG.md...\e[0m\n"
pnpm changelog  # Genera el changelog con standard-version

echo "\n\n ğŸ“¦  \e[1;34mAgregando archivos al commit del release...\e[0m\n"
git add CHANGELOG.md package.json

# Si hay cambios, los agregamos al Ãºltimo commit sin modificar su mensaje
if ! git diff --cached --quiet; then
  git commit --amend --no-edit -m "$(git log -1 --pretty=%B) [skip-push]"
fi

echo "\n\n ğŸš€  \e[1;34mHaciendo push...\e[0m\n"
git push